<UserControl x:Class="NovayaGlava_Desktop_Frontend.MVVM.View.LoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovayaGlava_Desktop_Frontend.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Login" Margin="5"/>
            <TextBox HorizontalAlignment="Center"  TextWrapping="Wrap" Text="" Width="120" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Password" Margin="5"/>
            <TextBox HorizontalAlignment="Center"  TextWrapping="Wrap" Text="" Width="120" Margin="5"/>
            <Button Content="Button" HorizontalAlignment="Center" />

        </StackPanel>
    </Grid>
</UserControl>
